<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_16dp">

    <ProgressBar
        android:id="@+id/placeholder_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/padding_8dp" />

    <TextView
        android:id="@+id/placeholder_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="@dimen/padding_8dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_size_16sp" />

    <Button
        android:id="@+id/placeholder_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_6dp"
        android:background="@drawable/shape_retry_button"
        android:paddingStart="@dimen/margin_30dp"
        android:paddingEnd="@dimen/margin_30dp"
        android:text="@string/retry"
        android:textColor="@android:color/white" />

</LinearLayout>