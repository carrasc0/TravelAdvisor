<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_60dp"
    android:layout_marginEnd="@dimen/margin_60dp"
    android:background="@drawable/shape_switch_destination_view"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_16dp"
        android:padding="@dimen/padding_12dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/switch_destination_content_description"
        android:src="@drawable/ic_arrow_forward_black_24dp" />

    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:padding="@dimen/padding_12dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_16sp" />

</RelativeLayout>
